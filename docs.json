{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Mailist Docs",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Portal",
          "icon": "grid-2",
          "href": "https://app.mailist.pl"
        },
        {
          "anchor": "Support",
          "icon": "life-ring",
          "hidden": true,
          "href": "https://mailist.com/support"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Guides",
        "hidden": true,
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Contacts",
            "pages": [
              "api-reference/subscribers/create",
              "api-reference/subscribers/get",
              "api-reference/subscribers/update"
            ]
          },
          {
            "group": "Contact Lists",
            "pages": [
              "api-reference/lists/list",
              "api-reference/lists/create"
            ]
          },
          {
            "group": "Campaigns",
            "pages": [
              "api-reference/campaigns/list",
              "api-reference/campaigns/get",
              "api-reference/analytics/campaign-stats"
            ]
          }
        ]
      }
    ]
  },
  "logo": "/images/mailist-gemini-transparent.png",
  "navbar": {
    "links": [
      {
        "label": "Contact",
        "href": "mailto:support@mailist.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://app.mailist.com/signup"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mailist",
      "github": "https://github.com/mailist-com",
      "linkedin": "https://linkedin.com/company/110314301"
    }
  }
}
